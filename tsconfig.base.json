{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "types": ["node"],
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@puredialog/domain": ["packages/domain/src/index"],
      "@puredialog/domain/*": ["packages/domain/src/*"],
      "@effect/schema": ["packages/domain/node_modules/@effect/schema/dist/esm/index"],
      "@effect/schema/*": ["packages/domain/node_modules/@effect/schema/dist/esm/*"],
      "@effect/schema/Schema": ["packages/domain/node_modules/@effect/schema/dist/esm/Schema"]
    }
  }
}
